---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const notifs = Astro.locals.notifications;
console.log(notifs);
---

<Layout title="notifications">
  <div class="flex flex-col items-center gap-2">
    {
      notifs.map((n) => (
        <div class="flex w-64 flex-row justify-between gap-4 bg-slate-400 p-4">
          <p class="self-center">{n.text}</p>
          <div class="flex flex-row gap-2 rounded-md border-2 border-solid border-red-400 p-2">
            <div id="archive" class={`rounded-md border-2 border-solid border-blue-300 p-2`}>
              <Icon name="mdi:archive" />
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
